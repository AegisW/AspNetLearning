@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="pt-4">Welcome to RMS</h1>

<div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-9 col-lg-6 col-xl-5">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                 class="img-fluid" alt="Sample image">
        </div>
        <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
            @*<div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                <p class="lead fw-normal mb-0 me-3">Sign in with</p>
                @foreach (var provider in Model.ExternalLogins!)
                {
                    if (provider.DisplayName == "Facebook")
                    {
                        <button type="submit" class="btn btn-primary btn-floating mx-1" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                            <i class="fab fa-facebook-f"></i>
                        </button>
                    }

                    if (provider.DisplayName == "Microsoft")
                    {
                        <button type="submit" class="btn btn-primary btn-floating mx-1" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                            <i class="fab fa-windows"></i>
                        </button>
                    }
                }
            </div>

            <div class="divider d-flex align-items-center my-4">
                <p class="text-center fw-bold mx-3 mb-0">Or</p>
            </div>*@
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Email input -->
                <div class="form-floating mb-4">
                    <input asp-for="Input.Email" type="email" autocomplete="username" class="form-control form-control-lg" placeholder="Enter a valid email address" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label">Email address</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password input -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" type="password" autocomplete="current-password" class="form-control form-control-lg" placeholder="Enter password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <!-- Checkbox -->
                    <div class="checkbox mb-0">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-body">Forgot password?</a>
                </div>

                <div class="text-center text-lg-start mt-4 pt-2">
                    <button id="login-submit" type="submit" class="btn btn-primary btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;">
                        Login
                    </button>
                    <p class="small fw-bold mt-2 pt-1 mb-0">
                        Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-danger">Register</a>
                    </p>
                    <p class="small fw-bold mt-2 pt-1 mb-0">
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
